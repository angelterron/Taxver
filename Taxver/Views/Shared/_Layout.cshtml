        <script type="text/javascript">
            $(document).ready(function () {
                $(document).on("click",'.alta' ,function (evt) {
                    var id = $(this).val();
                    $.get("/Unidades/Status/" + $(this).val(), function (event) {                        
                        $("#status").empty();
                        $("<button value='" + id + "' class='baja btn btn-success'>Activo</button>").appendTo($("#status"));
                    });
                });
                $(document).on("click", '.baja',function (evt) {
                    var id = $(this).val();
                    $.get("/Unidades/Status/" + $(this).val(), function (event) {                        
                        $("#status").empty();
                        $("<button value='" + id + "' class='alta btn btn-danger'>Inactivo</button>").appendTo($("#status"));
                    });
                });
                $("#table").dataTable({
                    "language": {
                        "sProcessing": "Procesando...",
