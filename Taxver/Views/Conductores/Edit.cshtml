@model Taxver.Models.Conductor

@{
    ViewData["Title"] = "Editar";
    var img = Model.Foto;
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Editar conductor</h4>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="col-md-12 align-content-md-center">
        <form method="post" enctype="multipart/form-data" asp-controller="Conductores" asp-action="Edit">
            <div class="card col-md-8">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdConductor" />
                    <div class="text-center">
                        <div class="form-group">
                            <img src="~/@img" width="150" height="150" class="rounded-circle">
                        </div>
                        <div class="custom-file col-md-5">
                            <input type="file" name="file" id="validateCustomFile" class="custom-file-input">
                            <label class="custom-file-label text-left" for="validatedCustomFile">Seleccionar nueva foto...</label>
                            <div class="invalid-feedback">Example invalid custom file feedback</div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="IdPersonaNavigation.Nombre" class="control-label"></label>
                        <input asp-for="IdPersonaNavigation.Nombre" class="form-control" />
                        <span asp-validation-for="IdPersonaNavigation.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPersonaNavigation.ApellidoPaterno" class="control-label"></label>
                        <input asp-for="IdPersonaNavigation.ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="IdPersonaNavigation.ApellidoPaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPersonaNavigation.ApellidoMaterno" class="control-label"></label>
                        <input asp-for="IdPersonaNavigation.ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="IdPersonaNavigation.ApellidoMaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPersonaNavigation.Telefono" class="control-label"></label>
                        <input asp-for="IdPersonaNavigation.Telefono" class="form-control phone-inputmask" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IdVehiculo" class="control-label">Unidad asignada</label>
                        <select asp-for="IdVehiculo" class="form-control" asp-items="ViewBag.IdVehiculo">
                            <option value="1">Sin unidad...</option>
                        </select>
                        <span asp-validation-for="IdVehiculo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
