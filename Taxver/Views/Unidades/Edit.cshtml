@model Taxver.Models.Vehiculo

@{
    ViewData["Title"] = "Editar";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Editar unidad</h4>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="row">
                <div class="card col-md-6 col-sm-6">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdVehiculo" />
                        <div class="form-group">
                            <label asp-for="Placa" class="control-label"></label>
                            <input asp-for="Placa" class="form-control" />
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Modelo" class="control-label"></label>
                            <input asp-for="Modelo" class="form-control" />
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="form-group float-right">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="card col-md-6 col-sm-6">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="control-label">Seguro</label>
                            <select class="form-control" asp-items="ViewBag.IdSeguro"></select>
                        </div>                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
